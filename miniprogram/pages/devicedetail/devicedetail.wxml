<view style="margin-top: 20rpx;" />
<van-cell title="{{currentDevice.currentDevice.name}}" label="deviceId:{{currentDevice.currentDevice.deviceId}}" value="{{currentDevice.isConnected ? '已连接' : '已断开'}}" value-class="{{currentDevice.isConnected ? 'connected ' : 'disconneted'}}" />

<!-- 渲染 currentDevice.services 数组 -->
<van-cell-group custom-class="cell-group" wx:if="{{currentDevice}}" wx:for="{{currentDevice.services}}" wx:key="index" title="{{item.serviceName}}">
  <van-cell wx:for="{{item.characteristics}}" wx:key="index" title="{{item.name}}" label="{{item.value}}" />
</van-cell-group>